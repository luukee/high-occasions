<section id="section_page_header" class="wpb_row section-page-header {% if section.settings.image != blank %}section-page-header-color{% endif %}" {% if section.settings.image != blank %}style="background-image: url({{ section.settings.image | img_url: '1920x', format: 'pjpg' | split:'?' | first }}); background-repeat: no-repeat; background-position: center center; background-size: cover; background-color: transparent;"{% endif %}>
    <div class="container">
        <div class="page-header-inner">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="page-title">{{ page_title }}</h1>
                    <div class="la-breadcrumbs hidden-xs">
                      <div class="la-breadcrumb-content">
                        <div class="la-breadcrumb-wrap">
                          <div class="la-breadcrumb-item"><a href="{{ shop.url }}" class="la-breadcrumb-item-link is-home" rel="home" title="{{ shop.name | escape }}">{{ 'general.breadcrumbs.home' | t }}</a></div>
                          <div class="la-breadcrumb-item">
                            <div class="la-breadcrumb-item-sep"><i class="icon dl-icon-right"></i></div>
                          </div>
                          <div class="la-breadcrumb-item"><span class="la-breadcrumb-item-target">{{ page.title }}</span></div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="page-content-contact">
  <div class="container">
    <div class="row">
      
      {% if section.settings.text_alternate01 != blank %}
      <h2 class="col-xs-6 text-center special-h2">
        {{ section.settings.text_alternate01 }}
      </h2>
      {% endif %}

      {% for block in section.blocks %}  
        <div class="col-xs-12">  
          <li>{{ block.settings.content }}</li>
      </div>
      {% endfor %}
      
    </div>
    <div class="row">
      <div class="col-xs-12">
        {% if page.content.size > 0 %}
        	{{ page.content }}
        {% endif %} 
      </div>
    </div>
    
  </div>
</div>

{% schema %}
  {
    "name": "Alternate01 page",
    "settings": [
      {
        "type": "header",
        "content": "Settings page"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Banner image"
      },
      {
        "type": "textarea",
        "id": "text_alternate01",
        "label": "Text Alternate01",
		"default": "Your text goes here."
	  }
    ],
 	"blocks": [
      {
        "type": "quote",
        "name": "FAQ",
        "settings": [
          {
            "id": "content",
            "type": "textarea",
            "label": "Content"
          },
          {
            "id": "content-title",
            "type": "text",
            "label": "Content Title"
          }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
